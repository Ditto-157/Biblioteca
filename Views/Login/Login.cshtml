@{
    Layout = "~/Views/Shared/_Layoutct.cshtml";
}

@section main{
    <style>
        main {
            display: flex;
            flex-grow: 1;
            width: 100vw;
            height: 50vw;
            justify-content: center;
        }

       .rt_ct{
           display: flex;
           flex-direction:column;
           
       }
       .rg_not{
           width: 90%;
           height: 5%;
           background-color: red;
           border: 1px solid black;
           border-radius: 10px;
            
            margin-top: 2%;
       }

       

       .fl{
           width: 70%;
           height:20%;
           border-radius: 10px;
           margin-top: 0.2%;
           margin: 1%;
       }

       

       h3{
           margin: 1%;
       }

       h2{
           font-size: 2vw;
           display: flex;
           margin-top: 20%;
           
            
       }

       .ct{
           display: none;
       }

    </style>

    @model Biblioteca.Models.LoginModel

    
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
        {
    <div class="rg_not">
        <p>@ViewBag.Mensagem</p>
    </div>
    }
    <div class="rt_lg">
        <h3>Fazer login</h3>
        @Html.TextBoxFor(model => model.RG, new {@class = "fl"})
        <button type="submit" class="btn_login">Fazer login</button>
    </div>
    <h2>Se não possui cadastro!<a class="cad" asp-area="" asp-controller="Login" asp-action="Cadastro">Clique aqui</a></h2>
    }
}

@section pesquisa{
    <style>
        .pesquisa{
            display: none;

        }

    </style>
}

@section conteudo {
    <style>
        .ct{
            display: none;
            
        }

    </style>

    
}