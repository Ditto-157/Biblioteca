@section main {
    <style>
        .conteudo{
            display: flex;
            flex-direction: column;
        }

        .rt_ct {
            display: flex;
            flex-direction: column;
        }

        h2{
            font-size: 2vw;
            margin-left: 2%;
            margin-top: 1%;
        }

        .rt_en{
            width: 90%;
            height: 20%;
            border: 1px solid black;
            margin-top: 2%;
            margin-left: 3%;
            border-radius: 10px;
        }

        .arq{
            margin-left: 2%;
            margin-top: 3%;
        }

        .btns {
            display: flex;
            flex-direction: row;
            justify-content: space-around;
