@{

}

@model List<Biblioteca.Models.LivroModel>

    <style>

    <style >
    .lista {
        display: flex;
        flex-direction: column;
    }

    .lt {
        margin-top: 1%;
        width: 58vw;
        color: white;
        background-color: #003666;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        text-align: center;
        font-size: 1vw 1vh;
        border-radius: 5px;
    }

    .livro-acao {
        display: flex;
        align-items: center;
    }

    .btn-solicitar {
        margin-left: auto;
        background-color: #009933;
        color: white;
        border: none;
        border-radius: 5px;
        margin-right: 5px;
    }

</style>

    </style>

@if (Model != null)
{

    <ul class="lista">
        @foreach (var livro in Model)
        {
            <li class="lt">@livro.Autor - @livro.Assunto - @livro.Titulo <button type="submit" class="btn-solicitar">Solicitar emprestimo</button></li>
        }
    </ul>
}